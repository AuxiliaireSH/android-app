<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:background="@color/white">

    <View
        android:id="@+id/revealBackground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="24dp"
        android:background="@android:color/transparent"
        android:elevation="4dp">
    </View>

    <RelativeLayout
        android:id="@+id/reveal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingTop="24dp"
        android:background="@android:color/transparent"
        android:elevation="4dp">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:id="@+id/exiticon"
            android:layout_margin="5pt"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_alignParentStart="true"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder - Help me"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:id="@+id/helpTitle"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="150dp"
        android:paddingBottom="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/personLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:id="@+id/phoneIcon"
                    android:tint="@color/lightPink"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_alignTop="@+id/nameText"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name Text"
                    android:ems="10"
                    android:layout_marginLeft="16dp"
                    android:textSize="21dp"
                    android:textColor="@color/textColor"
                    android:id="@+id/nameText"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/phoneIcon" />


            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView"
                        android:tint="@color/lightPink"
                        android:src="@drawable/ic_build_black_24dp"
                        android:layout_alignTop="@+id/jobTypeText"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="type job"
                        android:ems="10"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/jobTypeText"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView" />
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView5"
                        android:tint="@color/lightPink"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:singleLine="false"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:id="@+id/descText"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_toEndOf="@+id/imageView5" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView2"
                        android:tint="@color/lightPink"
                        android:src="@drawable/ic_monetization_on_black_24dp"
                        android:layout_alignTop="@+id/priceText"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price Text"
                        android:ems="10"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/priceText"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView2" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView3"
                        android:tint="@color/lightPink"
                        android:src="@drawable/ic_explore_black_24dp"
                        android:layout_alignTop="@+id/positionText"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="position Text"
                        android:ems="10"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/positionText"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView3" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept job"
                    android:id="@+id/acceptbtn"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>