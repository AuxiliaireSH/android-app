<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTab">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:id="@+id/exiticon"
            android:layout_margin="5pt"
            android:src="@drawable/ic_close_white_24dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder - Help me"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:id="@+id/helpTitle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/personLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:id="@+id/phoneIcon"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_alignTop="@+id/nameText"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name Text"
                    android:ems="10"
                    android:layout_marginLeft="16dp"
                    android:textSize="21dp"
                    android:textColor="@color/textColor"
                    android:id="@+id/nameText"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/phoneIcon" />


            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView"
                        android:src="@drawable/ic_build_black_24dp"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="type job"
                        android:ems="10"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/textView2"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView2"
                        android:src="@drawable/ic_monetization_on_black_24dp"
                        android:layout_alignTop="@+id/textView3"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price Text"
                        android:ems="10"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/textView3"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView2" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView3"
                        android:src="@drawable/ic_explore_black_24dp"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="position Text"
                        android:ems="10"
                        android:layout_marginLeft="16dp"
                        android:textSize="21dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/textView4"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView3" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept job"
                    android:id="@+id/acceptbtn"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>