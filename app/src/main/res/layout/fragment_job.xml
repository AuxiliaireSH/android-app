<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorTab"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@drawable/jobimg"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder - Help me"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:id="@+id/helpTitle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name Text"
                android:textSize="21dp"
                android:textColor="@color/textColor"
                android:id="@+id/nameText"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price text"
                android:textSize="21dp"
                android:textColor="@color/textColor"
                android:id="@+id/priceText"
                android:layout_below="@+id/nameText"
                android:layout_alignStart="@+id/nameText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type of job text"
                android:textSize="21dp"
                android:textColor="@color/textColor"
                android:id="@+id/textView2"
                android:layout_below="@+id/priceText"
                android:layout_alignStart="@+id/priceText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description text"
                android:textSize="21dp"
                android:textColor="@color/textColor"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="position text"
                android:textSize="21dp"
                android:textColor="@color/textColor"
                android:id="@+id/textView3"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept job"
                android:id="@+id/button"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>